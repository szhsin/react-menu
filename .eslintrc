{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16"
    }
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "^_\\d?$"
      }
    ],
    "react/prop-types": 0,
    "react/display-name": 0,
    "react/no-children-prop": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}